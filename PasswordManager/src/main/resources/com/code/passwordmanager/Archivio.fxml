<AnchorPane prefHeight="800.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.code.passwordmanager.ArchivioController">
   <children>
      <TextField fx:id="tfSearch" alignment="CENTER" layoutX="228.0" layoutY="14.0" onKeyTyped="#searchInDB" onMouseClicked="#initSearch" prefHeight="25.0" prefWidth="300.0" style="-fx-background-radius: 10px;" text="Search" />
      <Button layoutX="590.0" layoutY="14.0" mnemonicParsing="false" onAction="#addPassword" prefHeight="25.0" prefWidth="177.0" styleClass="navigationButton" stylesheets="@css/style.css" text="Aggiungi Password +" />
      <HBox alignment="CENTER" layoutX="10.0" layoutY="186.0" prefHeight="600.0" prefWidth="825.0" AnchorPane.bottomAnchor="14.0">
         <children>
            <ScrollPane fx:id="scroll" hbarPolicy="NEVER" pannable="true" prefHeight="600.0" prefWidth="844.0" stylesheets="@css/style.css" vbarPolicy="NEVER">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
               <content>
                  <GridPane fx:id="grid" prefHeight="3.0" prefWidth="11.0">
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                  </GridPane>
               </content>
            </ScrollPane>
         </children>
      </HBox>
   </children>
</AnchorPane>
