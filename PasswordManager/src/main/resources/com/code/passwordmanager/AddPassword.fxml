<DialogPane fx:id="dialogPane" prefHeight="477.0" prefWidth="600.0" style="-fx-background-color: white;" styleClass="button" stylesheets="@css/dialog.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.code.passwordmanager.AddPasswordController">
   <graphic>
      <VBox alignment="CENTER" fillWidth="false" prefHeight="343.0" prefWidth="600.0" stylesheets="@css/style.css">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-border-radius: 15px;" stylesheets="@css/style.css">
               <children>
                  <ImageView fx:id="imgChooser" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" styleClass="imgchooser">
                     <image>
                        <Image url="@images/default_image.png" />
                     </image></ImageView>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" top="5.0" />
               </VBox.margin>
               <styleClass>
                  <String fx:value="shadow" />
                  <String fx:value="imgchooser" />
               </styleClass>
            </HBox>
            <Label alignment="CENTER" text="Nome">
               <VBox.margin>
                  <Insets right="190.0" top="5.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="tfNewName" prefHeight="25.0" prefWidth="210.0" style="-fx-border-radius: 5px;" styleClass="search" />
            <Label text="NomeUtente o Email">
               <VBox.margin>
                  <Insets right="110.0" top="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="tfNewEmail" prefHeight="25.0" prefWidth="210.0" style="-fx-border-radius: 5px;" styleClass="search" stylesheets="@css/style.css" />
            <Label text="Password">
               <VBox.margin>
                  <Insets right="170.0" top="10.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="29.0" prefWidth="371.0">
               <children>
                  <TextField fx:id="tfNewPassword" prefHeight="29.0" prefWidth="214.0" style="-fx-border-radius: 5px;" styleClass="search" stylesheets="@css/style.css">
                     <HBox.margin>
                        <Insets left="80.0" right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <Button mnemonicParsing="false" prefHeight="24.0" prefWidth="77.0" styleClass="itemButton" text="Genera">
                     <HBox.margin>
                        <Insets top="2.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <Label text="Url">
               <VBox.margin>
                  <Insets right="200.0" top="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="tfNewUrl" prefHeight="25.0" prefWidth="210.0" style="-fx-border-radius: 5px;" styleClass="search" />
            <HBox prefHeight="121.0" prefWidth="580.0" />
         </children>
         <padding>
            <Insets top="5.0" />
         </padding>
      </VBox>
   </graphic>
   <buttonTypes>
      <ButtonType fx:constant="OK" />
      <ButtonType fx:constant="CANCEL" />
   </buttonTypes>
</DialogPane>
